{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "es6", "dom", "es2016", "es2017", "WebWorker"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": ["node", "vite/client", "vite-plugin-pwa/client"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.test.tsx",
    "src/**/**/*.test.tsx",
    "src/**/**/**/*.test.tsx",
    "src/**/**/**/*.stories.tsx",
    "src/**/**/*.stories.tsx",
    "src/**/*.stories.tsx",
    "src/**/**/**/*.mdx",
    "src/**/**/*.mdx",
    "src/**/*.mdx",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
